{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      /* 절대경로 설정 */
      "public/*": ["public/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["vite.config.ts"]
}
